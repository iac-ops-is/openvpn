client
dev tun
proto {{ openvpn_proto }}
remote {{ ansible_host }} {{ openvpn_port }}
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
auth SHA256
cipher AES-256-CBC
setenv opt block-outside-dns
key-direction 1
verb 3
<ca>
{{ ca_cert_content.content | b64decode }}
</ca>
<cert>
{{ client_cert_content.content | b64decode }}
</cert>
<key>
{{ client_key_content.content | b64decode }}
</key>
<tls-auth>
{{ ta_key_content.content | b64decode }}
</tls-auth>
