[ req ]
default_bits       = 2048
default_keyfile    = privkey.pem
distinguished_name = req_distinguished_name
req_extensions     = req_ext
x509_extensions    = v3_ca # The extentions to add to the self signed cert

[ req_distinguished_name ]
countryName                 = Country Name (2 letter code)
countryName_default         = {{ openvpn_easyrsa_req_country }}

stateOrProvinceName         = State or Province Name (full name)
stateOrProvinceName_default = {{ openvpn_easyrsa_req_province }}

localityName                = Locality Name (eg, city)
localityName_default        = {{ openvpn_easyrsa_req_city }}

organizationName           = Organization Name (eg, company)
organizationName_default    = {{ openvpn_easyrsa_req_org }}

organizationalUnitName      = Organizational Unit Name (eg, section)
organizationalUnitName_default = {{ openvpn_easyrsa_req_ou }}

commonName                  = Common Name (e.g. server FQDN or YOUR name)
commonName_default          = {{ openvpn_easyrsa_req_cn }}

emailAddress                = Email Address
emailAddress_default        = {{ openvpn_easyrsa_req_email }}

[ req_ext ]
subjectAltName = @alt_names

[ v3_ca ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1   = {{ openvpn_easyrsa_req_cn }}
